{
    "name": "carousel/service-provider",
    "type": "library",
    "description": "Service provider for container",
    "keywords": [
        "Carousel",
        "ServiceProvider"
    ],
    "homepage": "https://github.com/carousel/service-provider",
    "license": "MIT",
    "authors": [
        {
            "name": "Miroslav Trninic",
            "email": "miroslav.trninic@gmail.com",
            "homepage": "http://antitask.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "carousel/container": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Carousel\\ServiceProvider\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Carousel\\ServiceProvider\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
